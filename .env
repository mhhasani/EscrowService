# Development environment variables (do NOT commit secrets to VCS)
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SECRET_KEY=replace-this-with-a-secure-value

# Database
DB_ENGINE=django.db.backends.mysql
DB_NAME=escrow_service
DB_USER=escrow
DB_PASSWORD=escrow
DB_HOST=db
DB_PORT=3306
DB_TEST_NAME=test_escrow_service

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Escrow settings
ESCROW_DEFAULT_EXPIRATION_SECONDS=86400
